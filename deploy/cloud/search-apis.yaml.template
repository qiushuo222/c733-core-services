apiVersion: v1
kind: Service
metadata:
  name: search-apis
  labels:
    app: search-apis
spec:
  ports:
  - port: 8000
    name: http
  selector:
    app: search-apis
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: search-apis
  labels:
    app: model
spec:
  replicas: 1
  selector:
    matchLabels:
      app: search-apis
  template:
    metadata:
      labels:
        app: search-apis
    spec:
      containers:
      - name: search-apis
        image: DOCKER_IMAGE_IN_YOUR_REPOSITORY
        ports:
        - containerPort: 5672
        - containerPort: 8000
        env:
          - name: MQ_HOST
            value: "rabbitmq-cluster"
          - name: MQ_USERNAME
            valueFrom:
              secretKeyRef:
                name: rabbitmq-cluster-default-user
                key: username
          - name: MQ_PASSWORD
            valueFrom:
              secretKeyRef:
                name: rabbitmq-cluster-default-user
                key: password